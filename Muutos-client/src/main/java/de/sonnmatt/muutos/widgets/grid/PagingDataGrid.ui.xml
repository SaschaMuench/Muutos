<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:b.gwt="urn:import:org.gwtbootstrap3.client.ui.gwt">

	<g:HTMLPanel ui:field="gridHtmlPanel" styleName="muutos-datagrid-widget">
		<b:Panel>
			<b:PanelHeader>
				<b:Heading ui:field="gridHeader" size="H3" text="User management" styleName="muutos-datagrid-header" />
				<b:InputGroup>
					<b:InputGroupAddon ui:field="gridFilterIcon" icon="FILTER" styleName="muutos-datagrid-filterIcon" />
					<b:TextBox ui:field="gridSearch" placeholder="Search" styleName="muutos-datagrid-searchBox" />
				</b:InputGroup>
			</b:PanelHeader>
			<b:PanelBody>
				<b.gwt:DataGrid ui:field="grid" styleName="muutos-datagrid-grid" />
				<b:Pagination ui:field="gridPagination" styleName="muutos-datagrid-pagination" />
			</b:PanelBody>
		</b:Panel>
	</g:HTMLPanel>
</ui:UiBinder> 